html, body
  margin: 0
  width: 100%
  position relative

.control-panel
  margin: 1em
  position absolute
  top 1em
  right 1em
  width 20em
  background white
  padding 1em

.world-map
  width: 100%
  height: 100vh

.plate-polygon
  fill: #ECEFF1
  stroke: #607D8B
  stroke-width: 0.75
  outline: none
  &:hover
    fill: #607D8B
    stroke: #607D8B
    stroke-width: 0.75
    outline: none
  &:pressed
    fill: #FF5722
    stroke: #607D8B
    strokeWidth: 0.75
    outline: none
